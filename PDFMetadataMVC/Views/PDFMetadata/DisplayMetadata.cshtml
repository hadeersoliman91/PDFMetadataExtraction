@using PDFMetadata.Shared
@model PDFReportModel
@{
    ViewData["Title"] = "Display Metadata";
}

<h2 class="text-center my-4" style="font-family: 'Comic Sans MS', cursive; font-weight: bold;">Extracted Metadata</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>File Name</th>
                <th>Title</th>
                <th>Author</th>
                <th>Creation Date</th>
                <th>Number of Pages</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var metadata in Model.PDAMetadataList)
            {
                <tr>
                    <td>@metadata.FileName</td>
                    <td>@metadata.Title</td>
                    <td>@metadata.Author</td>
                    <td>@metadata.CreationDate</td>
                    <td>@metadata.NumberOfPages</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="container mt-4">
    <h3 class="text-center my-4" style="font-family: 'Comic Sans MS', cursive; font-weight: bold;">PDF Report</h3>


    <div class="mb-3">
        <strong>Total Pages:</strong> @Model.TotalPages
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3 class="mb-0">
                <button class="btn btn-info w-50 text-left" type="button" data-toggle="collapse" data-target="#processedFilesCollapse" aria-expanded="false" aria-controls="processedFilesCollapse">
                    Processed Files
                </button>
            </h3>
            <div id="processedFilesCollapse" class="collapse w-50">
                @if (Model.ProcessedFiles.Any())
                {
                    <ul class="list-group">
                        @foreach (var file in Model.ProcessedFiles)
                        {
                            <li class="list-group-item">@file</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No processed files available.</p>
                }
            </div>
        </div>
        <div class="col-md-6">
            <h3 class="mb-0">
                <button class="btn btn-warning w-50 text-left" type="button" data-toggle="collapse" data-target="#missingMetadataCollapse" aria-expanded="false" aria-controls="missingMetadataCollapse">
                    Files with Missing Metadata
                </button>
            </h3>
            <div id="missingMetadataCollapse" class="collapse w-50">
                @if (Model.FilesWithMissingMetadata.Any())
                {
                    <ul class="list-group">
                        @foreach (var file in Model.FilesWithMissingMetadata)
                        {
                            <li class="list-group-item">@file</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No files with missing metadata.</p>
                }
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

