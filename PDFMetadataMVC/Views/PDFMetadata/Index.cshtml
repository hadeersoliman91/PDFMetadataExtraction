@{
    ViewData["Title"] = "Upload PDF Files";
}

<h2 class="text-center my-4" style="font-family: 'Comic Sans MS', cursive; font-weight: bold;">Upload PDF Files</h2>

<div class="container">
    <form method="post" enctype="multipart/form-data" asp-controller="PDFMetadata" asp-action="Upload" class="shadow p-4 rounded bg-light">
        <div class="mb-3">
            <label for="fileInput" class="form-label">Select PDF files:</label>
            <input type="file" id="fileInput" name="files" class="form-control" multiple />
        </div>
        <button type="submit" class="btn btn-primary w-100">Upload</button>
    </form>
</div>

<style>
    
    body {
        background-color: #e9ecef; 
    }

    .container {
        max-width: 500px;
        margin: 0 auto;
    }

    form {
        background-color: #ffffff; 
        border-radius: 8px;
        padding: 20px;
    }

    .btn {
        font-size: 16px;
        padding: 10px;
    }
</style>
